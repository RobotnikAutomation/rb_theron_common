<?xml version="1.0"?>
<?xml-model
    href="http://download.ros.org/schema/package_format3.xsd"
    schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">
  <name>rb_theron_navigation</name>
  <version>1.0.0</version>
  <description>
    This package configures the move_base stack and makes use of the gmapping
    and amcl algorithms to move the rb_theron robot.
  </description>

  <maintainer email="avillena@robotnik.es">√Ålvaro Villena</maintainer>

  <license>BSD</license>

  <url type="website">http://wiki.ros.org/rb_theron_navigation</url>
  <url type="repository">https://github.com/RobotnikAutomation/rb_theron_common.git</url>
  <url type="bugtracker">https://github.com/RobotnikAutomation/rb_theron_common/issues</url>

  <author email="opencode@robotnik.es">Robotnik Automation</author>

  <buildtool_depend>ament_cmake</buildtool_depend>

  <exec_depend>laser_filters</exec_depend>
  <exec_depend>move_base</exec_depend>
  <exec_depend>pointcloud_to_laserscan</exec_depend>
  <exec_depend>robotnik_docker</exec_depend>
  <exec_depend>robotnik_move</exec_depend>
  <exec_depend>robotnik_safety_controller</exec_depend>
  <exec_depend>spatio_temporal_voxel_layer</exec_depend>
  <exec_depend>teb_local_planner</exec_depend>
  <exec_depend>global_planner</exec_depend>
  <export>
    <build_type>ament_cmake</build_type>
  </export>
</package>
