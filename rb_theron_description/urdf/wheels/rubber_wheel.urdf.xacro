<?xml version="1.0"?>
<robot name="wheel"
    xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="$(find rb_theron_description)/urdf/wheels/rubber_wheel.transmission.xacro"/>
    <xacro:include filename="$(find rb_theron_description)/urdf/wheels/rubber_wheel.gazebo.xacro"/>


    <xacro:property name="M_PI" value="3.1415926535897931" />
    <!-- Wheels -->
    <xacro:property name="wheel_radius" value="0.125" />
    <xacro:property name="wheel_height" value="0.032" />
    <xacro:property name="wheel_mass" value="1.0" />
    <!-- in kg-->


    <xacro:macro name="cylinder_inertia" params="m r h">
        <inertia ixx="${m*(3*r*r+h*h)/12}" ixy = "0" ixz = "0" iyy="${m*(3*r*r+h*h)/12}" iyz = "0" izz="${m*r*r/2}" />
    </xacro:macro>

    <xacro:macro name="rubber_wheel" params="prefix parent *origin reflect hq">

        <!--WHEEL TIRE -->
        <joint name="${prefix}_wheel_joint" type="continuous">
            <parent link="${parent}"/>
            <child link="${prefix}_wheel_link"/>
            <xacro:insert_block name="origin" />
            <axis xyz="0 1 0" rpy="0 0 0" />
            <limit effort="100" velocity="100"/>
            <joint_properties damping="0.0" friction="0.0"/>
        </joint>

        <link name="${prefix}_wheel_link">
            <visual>
                <!-- HIGH RESOLUTION WHEELS -->
                <!-- LOW RESOLUTION WHEELS -->
                <origin xyz="0 0 0" rpy="${M_PI/2} 0 0" />
                <geometry>
                    <cylinder length="${wheel_height}" radius="${wheel_radius}" />
                </geometry>
            </visual>

            <collision>
                <origin xyz="0 0 0" rpy="${M_PI/2} 0 0" />
                <geometry>
                    <cylinder length="${wheel_height}" radius="${wheel_radius}" />
                </geometry>
            </collision>
            <inertial>
                <mass value="${wheel_mass}" />
                <origin xyz="0 0 0" />
                <cylinder_inertia m="${wheel_mass}" r="${wheel_radius}" h="${wheel_height}" />
            </inertial>
        </link>


        <xacro:rubber_wheel_transmission prefix="${prefix}" />
        <xacro:rubber_wheel_gazebo prefix="${prefix}" />


    </xacro:macro>

</robot>
