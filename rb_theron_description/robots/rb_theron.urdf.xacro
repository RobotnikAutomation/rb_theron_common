	<xacro:sensor_hokuyo_ust20lx prefix="$(arg prefix)rear_laser" parent="$(arg prefix)base_link" prefix_topic="rear_laser" min_angle="-2.0507619" max_angle="2.0507619">
		<origin xyz="-0.2675 0.215 0.1613" rpy="0 -3.1416 -0.7854"/>
